# Database Configuration
# PostgreSQL connection string - REQUIRED
DATABASE_URL=postgresql://user:password@host:5432/database

# Production database URL (used for data sync operations)
PRODUCTION_DATABASE_URL=postgresql://user:password@host:5432/production_database

# Application Configuration
# Base URL for the application - REQUIRED for email links and webhooks
APP_URL=https://your-domain.vercel.app

# Port for local development
PORT=5000

# Environment (automatically set by Vercel in production)
NODE_ENV=development

# Authentication & Session
# Session secret for encryption - REQUIRED, use a strong random string
SESSION_SECRET=your-random-session-secret-generate-one

# Cookie domain (optional, for cross-subdomain cookies)
COOKIE_DOMAIN=

# Stripe Payment Integration
# Stripe API keys - REQUIRED for payment processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe webhook configuration
STRIPE_WEBHOOK_BASE_URL=https://your-domain.vercel.app

# OpenAI Integration
# OpenAI API key - REQUIRED for AI features (photo analysis, etc.)
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-openai-api-key
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# Xero Accounting Integration
# Xero OAuth credentials - OPTIONAL, only needed if using Xero integration
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_WEBHOOK_KEY=your-xero-webhook-key
XERO_REDIRECT_URI=https://your-domain.vercel.app/api/xero/callback

# Email Service (Resend)
# Resend API key - REQUIRED for email notifications
RESEND_API_KEY=re_your-resend-api-key

# Google Cloud Storage (Optional)
# Google Cloud credentials for file storage - OPTIONAL, falls back to local storage
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCS_BUCKET_NAME=your-bucket-name

# Replit-specific variables (only needed if deploying on Replit)
# These are automatically set by Replit, no need to configure manually
REPL_ID=
REPLIT_DEV_DOMAIN=
REPLIT_DOMAINS=
REPLIT_DEPLOYMENT=
REPL_IDENTITY=
WEB_REPL_RENEWAL=
ISSUER_URL=
REPLIT_CONNECTORS_HOSTNAME=

# Object Storage Paths (Replit-specific)
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=

# Development Mode
# Skip authentication in local development - SECURITY WARNING: Never enable in production!
SKIP_AUTH=false

# Weather API (Optional)
# If you have a weather API integration
WEATHER_API_KEY=
